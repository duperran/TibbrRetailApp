<%=  render 'layouts/stylesheets'%>


<h1>Listing pictures</h1>
<%= render 'layouts/header' %>
</br>



<div class="resources_list"> 
<table>
  <tr>
    <th>Image</th>
    <th>Thumb</th>
    <th>Big</th>
    <th>Title</th>
    <th>Description</th>
    <th>Link</th>
    <th>Item ID</th>
    <th>Store ID</th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.image %></td>
    <td><%= picture.thumb %></td>
    <td><%= picture.big %></td>
    <td><%= picture.title %></td>
    <td><%= picture.description %></td>
    <td><%= picture.link %></td>
    <td><%= picture.item_id %></td>
    <td><%= picture.store_id %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'New Picture', new_picture_path %>
</div>
