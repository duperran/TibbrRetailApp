<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :reference %><br />
    <%= f.text_field :reference %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :item_type_id %><br />
    <!--%= f.text_field :item_type_id %-->
    <%= f.select :item_type_id, [['Shoes','1'],['Jeans','2'],['Top','3']] %>
  </div>


  <%= f.fields_for :pictures do |pic| %>

    <p>Picture</p>
    <div id="item_image1">
      <div class="field">
        <%= pic.label "Title" %>
        <%= pic.text_field :title %>

      </div>
      <div class="field">
        <%= pic.label "Image" %>
        <%= pic.text_field :image %>

      </div>

      <div class="field">
        <%= pic.label "Thumb" %>
        <%= pic.text_field :thumb %>
      </div>

      <div class="field">
        <%= pic.label "Big" %>
        <%= pic.text_field :big %>
      </div>

      <div class="field">
        <%= pic.label "Description" %>
        <%= pic.text_field :description %>

      </div>

    </div>
    </br>

    


   

  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
